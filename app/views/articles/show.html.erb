<h1> <%= @article.title %> </h1>
<p> <%= @article.body %> </p>
<br>
<br>
<div>
    <%= link_to "Home", articles_path%>
</div>
<div>
    <%= link_to "Edit", edit_article_path(@article) %>
</div>
<div>
    <%= link_to "Destroy", article_path(@article), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
    } %>
</div>

<h2>Comments</h2>

<%= render @article.comments %>

<h2>Add a comment:</h2>

<%= render "comments/form", article: @article%>

